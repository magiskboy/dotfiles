# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

#!/usr/bin/env zsh

# head -n7 $HOME/dotfiles/README.md

export ZSH="$HOME/.ohmyzsh"
export DOTFILES=$HOME/dotfiles
ZSH_THEME="powerlevel10k/powerlevel10k"

plugins=(
  git
  kubectl
  docker
  vi-mode
  zsh-autosuggestions
  zsh-syntax-highlighting
  zsh-z
  yarn
)

source $ZSH/oh-my-zsh.sh

alias genssl="openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout cert.key -out cert.crt"
alias genmacaddr="openssl rand -hex 6 | sed 's/\(..\)/\1:/g;s/.$//'"
alias reload="exec \"$SHELL\""
alias md="mkdir"
alias fd="fdfind"
alias open="xdg-open"
alias pbcopy="xclip -sel clip"
alias pbpaste="xclip -o -sel clip"
alias ls="exa"
alias ll="exa --long"
alias lt="exa --tree"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias gnew="google-chrome-stable --disable-web-security --user-data-dir=/home/nkthanh/thanh.nk"

alias -s html='background google-chrome-stable'
alias -s {pdf,PDF}='mupdf &'
alias -s {mp4,MP4,mov,MOV}='background vlc'
alias -s {zip,ZIP}="unzip -l"
alias -s {ts,js,tsx,jsx,c,cpp,h,lua,vim,java,conf,json}="bat"
alias -s git="git clone"

autoload -Uz compinit
for dump in ~/.zcompdump(N.mh+24); do
  compinit
done
compinit -C

eval "$(zoxide init zsh)"
eval "$(fnm env --use-on-cd)"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

export TERM=xterm-256color

